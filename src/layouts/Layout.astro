---
import '../assets/style.css';
import cards from '../utils/app.mock';

export interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Pick the matching pairs of Cards" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script defer src="https://cdnjs.cloudflare.com/ajax/libs/tsparticles/2.10.1/tsparticles.bundle.min.js"
		></script>
	</head>
	<body>
		<main class="flex h-screen flex-col items-center justify-center">
			<h1 class="text-6xl">NETOMI</h1>
			<slot />
			<div id="tsparticles"></div>
		</main>
		<footer class="flex w-full items-center justify-center">
			<a href="https://github.com/srav001/netomi">Netomi @ GitHub</a>

			<!-- A very basic & simple image pre-fetch mechanism -->
			{cards.map(card => <img class="hidden" src={card.pic} alt={''} />)}
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--primary-vue: green;
		--primary-react: rgb(67, 195, 236);
		--primary-solid: rgb(68 107 158/ 0.8);
		--primary-svelte: orange;
		--background: #f6f6f6;
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: var(--background);
	}
</style>

<style>
	h1 {
		background-image: linear-gradient(45deg, rgb(124, 58, 237), #da62c4 30%, white 60%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
